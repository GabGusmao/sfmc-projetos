%%[
/* ==========  CAPTURA  ========== */
SET @nome      = TRIM(RequestParameter("nome"))
SET @telefone  = TRIM(RequestParameter("cel"))
SET @email     = LOWERCASE(TRIM(RequestParameter("email")))
SET @modelo    = TRIM(RequestParameter("modelo"))
SET @tempo     = TRIM(RequestParameter("tempo"))
SET @estado    = TRIM(RequestParameter("estado"))
SET @cidade    = TRIM(RequestParameter("cidade"))

/* ==========  CAPTURA UTM  ========== */
SET @utm_medium = TRIM(RequestParameter("utm_medium"))

IF EMPTY(@utm_medium) THEN
  SET @media = "INTERNET"
ELSE
  SET @media = @utm_medium
ENDIF

/* ==========  PADRÕES  ========== */
SET @interesse     = @modelo
SET @optin         = 1
SET @empresa       = "01 - BAMAQ CONTAGEM"
SET @tipo_evento   = "PROSPECCAO"
SET @Syonet_Sent   = 0
SET @origem        = "CGF MKT DIGITAL"
SET @grupo_evento  = "OPORTUNIDADE"

/* ==========  VALIDAÇÃO  ========== */
IF NOT EMPTY(@email) AND NOT EMPTY(@nome) AND NOT EMPTY(@telefone) THEN

   SET @existingEmail = Lookup("CGFMaqEquip", "email", "email", @email)

   IF NOT EMPTY(@existingEmail) THEN

      UpdateData("CGFMaqEquip", 1,
         "email", @email,
         "nome", @nome,
         "telefone", @telefone,
         "modelo", @modelo,
         "tempo", @tempo,
         "estado", @estado,
         "cidade", @cidade,
         "interesse", @interesse,
         "empresa", @empresa,
         "media", @media,
         "tipo_evento", @tipo_evento,
         "optin", @optin,
         "Syonet_Sent", @Syonet_Sent,
         "origem", @origem,
         "grupo_evento", @grupo_evento,
         "DataHora", NOW()
      )

   ELSE

      InsertData("CGFMaqEquip",
         "email", @email,
         "nome", @nome,
         "telefone", @telefone,
         "modelo", @modelo,
         "tempo", @tempo,
         "estado", @estado,
         "cidade", @cidade,
         "interesse", @interesse,
         "empresa", @empresa,
         "media", @media,
         "tipo_evento", @tipo_evento,
         "optin", @optin,
         "Syonet_Sent", @Syonet_Sent,
         "origem", @origem,
         "grupo_evento", @grupo_evento,
         "DataHora", NOW()
      )

   ENDIF

   Redirect("https://www.cgfseguros.com.br/obrigado")

ENDIF
]%%



