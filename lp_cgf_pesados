<script src="https://cdn.jsdelivr.net/npm/uikit@3.14.3/dist/js/uikit.min.js"></script>
<script>
  /* Adiciona UTM's como campos hidden */
  function addUtms(){
    const params=new URLSearchParams(window.location.search);
    const form=document.getElementById('conversion-form');
    ['utm_source','utm_medium','utm_campaign','utm_term','utm_content','gclid'].forEach(p=>{
      if(params.get(p)){
        const i=document.createElement('input');i.type='hidden';i.name=p;i.value=params.get(p);
        form.appendChild(i);
      }
    });
  }
  document.addEventListener('DOMContentLoaded',addUtms);
</script>

